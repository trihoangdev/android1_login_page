<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/txtRegsiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/text_register"
            android:textSize="@dimen/text_32" />

        <EditText
            android:id="@+id/edtAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_24"
            android:background="@drawable/background_edittext"
            android:hint="@string/text_account"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="@dimen/padding_8"
            android:textColorHint="#616161"
            android:textSize="@dimen/text_16"
            android:autofillHints=""
            tools:ignore="VisualLintTextFieldSize"
            android:digits="_,qwertzuiopasdfghjklyxcvbnm,QWERTYUIOPASDFGHJKLZXCVBNM,0123456789"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_24"
            android:background="@drawable/background_edittext"
            android:hint="@string/text_password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="@dimen/padding_8"
            android:textColorHint="#616161"
            android:textSize="@dimen/text_16"
            android:autofillHints=""
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/edtPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_24"
            android:background="@drawable/background_edittext"
            android:hint="@string/text_password_again"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="@dimen/padding_8"
            android:textColorHint="#616161"
            android:textSize="@dimen/text_16"
            android:autofillHints=""
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/txtContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/background_edittext"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="@string/text_continue"
            android:textSize="@dimen/text_24" />

    </LinearLayout>


</FrameLayout>